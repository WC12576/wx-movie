<!--index.wxml-->
<loading hidden="{{!loading}}">
  加载中...
</loading>
<view class="header">
  <text class="header-text">{{title}}</text>
</view>
<scroll-view scroll-y="true" style="height: 800px;" class="body" bindscrolltolower="loadMore">
  <navigator url="../movie/movie?id={{item.id}}" wx:for="{{movies}}">
    <view class="item">
      <image class="poster" src="{{item.images.small}}"></image>
      <view class="meta">
        <text class="title">{{item.title}}</text>
        <text class="sub-title">{{item.original_title}}({{item.year}})</text>
        <view class="directors"><text wx:for="{{item.directors}}">{{item.name}} </text></view>
      </view>
      <view class="rating">
        <text>{{item.rating.average}}</text>
      </view>
    </view>
  </navigator>
</scroll-view>